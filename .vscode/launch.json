{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Thereabout Backend (Development)",
            "request": "launch",
            "mainClass": "com.sixtymeters.thereabout.ThereaboutApplication",
            "projectName": "thereabout-backend",
            "cwd": "${workspaceFolder}/backend",
            "vmArgs": [
                "-Dspring.profiles.active=development",
                "-Dserver.port=9050"
            ],
            "console": "internalConsole",
            "stopOnEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "name": "Thereabout Frontend (Development)",
            "request": "launch",
            "program": "${workspaceFolder}/frontend/node_modules/@angular/cli/bin/ng",
            "args": [
                "serve",
                "--proxy-config",
                "src/proxy.conf.json"
            ],
            "cwd": "${workspaceFolder}/frontend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {
                "NODE_ENV": "development"
            },
            "preLaunchTask": "npm: install",
            "presentation": {
                "hidden": false,
                "group": "frontend",
                "order": 1
            }
        }
    ]
} 